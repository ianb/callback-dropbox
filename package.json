{
  "name": "callback-dropbox",
  "version": "0.0.1",
  "description": "Cloud message relay between callback-box and callback-clerk",
  "type": "module",
  "exports": {
    "./client": "./dist/client/index.js",
    "./worker": "./dist/worker/index.js"
  },
  "scripts": {
    "build": "tsc && vite build",
    "build:worker": "tsc",
    "build:capture": "vite build",
    "test": "tap test/*.test.ts",
    "dev": "wrangler dev",
    "dev:capture": "vite dev",
    "typecheck": "tsc --noEmit",
    "lint": "eslint worker/ client/ capture/",
    "lint:oxlint": "oxlint -A no-unused-vars",
    "lint:knip": "knip",
    "lint:circular": "madge --circular --extensions ts,tsx worker/ client/ capture/",
    "prepare": "husky"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4",
    "@ianbicking/personal-vibe-check": "file:../../personal-vibe-check",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4",
    "autoprefixer": "^10",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "husky": "^9.1.7",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "oxlint": "^1.47.0",
    "postcss": "^8",
    "tailwindcss": "^3",
    "tap": "^21",
    "typescript": "^5",
    "vite": "^5",
    "wrangler": "^3"
  },
  "tap": {
    "plugin": [
      "!@tapjs/node-serialize"
    ],
    "coverage-report": [
      "none"
    ],
    "statements": 0,
    "branches": 0,
    "functions": 0,
    "lines": 0
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18",
    "zod": "^4.3.6"
  },
  "lint-staged": {
    "{worker,client,capture}/**/*.{ts,tsx}": [
      "eslint"
    ]
  }
}
